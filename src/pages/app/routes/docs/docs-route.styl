.docs-layout > .main > .docs-route.content {

  padding 15px;
  font-weight 300;
  letter-spacing 0.5px;

  @media screen and (min-width: 768px) {
    padding-left 48px;
  }
  p code {
    background #ffc8b4;
    border 1px solid darken(#ffc8b4, 10%);
    padding 1px 4px;
    border-radius 3px;
  }

  pre:not(.hljs) {
    background #dedede;
    border 1px solid darken(#dedede, 10%);
    border-radius 3px;
    overflow auto;
    padding 8px 12px;
    code {
      background none;
      border none;
      padding 0;
      border-radius 0;
    }
  }

  a {
    color #395799;
    font-weight 600;

    &:hover {
      color lighten(#395799, 30%);
    }


  }
}