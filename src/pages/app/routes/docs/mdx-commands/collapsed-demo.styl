.collapsed-demo {
  position relative;

  & > .toggle {
    position: absolute;
    top: 3px;
    right: 3px;

    border-radius 3px;
    padding 3px 6px;
    //background rgba(grey, 0.3);
    cursor pointer;

    &:hover {
      background rgba(grey, 0.3);
      //color white;
    }

    &.bottom {
      top: auto;
      bottom: 3px;
    }
  }
}