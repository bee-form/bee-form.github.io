.docs-layout {
  height 100%;
  & > .main {
    max-width 1170px;
    margin 0 auto;
    position relative;
    height 100%;

    @media screen and (min-width: 768px) {
      padding-left 30%;
    }
    @media screen and (min-width: 1050px) {
      padding-left 20%;
    }

    & > .left-panel {
      display none;

      @media screen and (min-width: 768px) {
        display block;

        position: absolute;
        top: 0;
        left: 0;
        width: 30%;
        height 100%;

        padding-top 15px;

        border-right 1px solid rgba(0,0,0,.1);
      }
      @media screen and (min-width: 1050px) {
        width: 20%;
      }
    }
    & > .content {
      max-height 100%;
      overflow-y auto;

      padding 15px;
    }
    & > .right-panel {

    }
  }
}