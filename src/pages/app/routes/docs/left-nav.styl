.docs-layout .left-panel .left-nav {
  & > .section {
    letter-spacing 0.5px;
    margin-bottom: 1rem;
    &:not(:first-child) {
      margin-top: 1rem;
    }


    & > .title {
      display block;
      font-weight 500;
      font-size 1rem;

      padding .25rem 1.5rem;
      color rgba(black, 0.75);

      &.active, &:hover {

        color black;
      }
    }

    & > .items {
      .item {
        display block;
        padding .25rem 1.5rem;
        color rgba(black, 0.75);
        font-weight 400;

        &.active, &:hover {
          color black;
        }
        &.active {
          font-weight 500;
        }
      }
    }
  }
}