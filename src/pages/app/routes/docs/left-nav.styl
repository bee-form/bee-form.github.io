.docs-layout .left-panel .left-nav {
  & > .section {
    letter-spacing 0.5px;

    & > .title {
      font-weight 500;
      font-size 1rem;

      padding .25rem 1.5rem;
      color rgba(black, 0.85);

      &.active {
        margin-bottom: 1rem;
        color black;
        &:not(:first-child) {
          margin-top: 1rem;
        }
      }
    }

    & > .items {
      .item {
        padding .25rem 1.5rem;
        color rgba(black, 0.85);
        font-weight 400;

        &.active {
          color black;
          font-weight 500;
        }
      }
    }
  }
}