.home-route {
  padding-top 30px;
  .intro {
    padding 0 15px;
    position relative;
    margin 0 auto;
    letter-spacing 1px;
    text-align center;

    @media screen and (min-width: 768px) {
      text-align left;

      max-width 720px;
    }

    @media screen and (min-width: 1200px) {
      max-width 1140px;
    }

    .text-panel {

      @media screen and (min-width: 768px) {
        width 50%;
      }
      h1 {
        color lighten(orange3, 5%);
        font-size 50px;
        font-weight 500;
        position relative;
        left -3px;
      }

      p.description {
        font-size: 17px;
        font-weight: 300;
        letter-spacing 0.5px;
      }

      .buttons {
        text-align center;
        a {
          width 100%;
          margin-bottom 10px;
          @media screen and (min-width: 460px) {
            width auto;
          }
        }
      }
    }

    .icon {

      @media screen and (min-width: 768px) {
        position absolute;
        top: 0;
        right 15px;
      }

      img {
        width 200px;
        max-width 70%;
      }
    }
  }
}